#!/bin/bash -l
#PBS -N vmix1
#PBS -l walltime=12:00:00
#PBS -l select=1:ncpus=12:mpiprocs=12:ompthreads=1

source $HOME/.bashrc
module load gcc/13.1.0
module load mpi/openmpi/4.0.2
module load library/fftw/3.3.8openmpi402

export OMP_NUM_THREADS=1
cd $PBS_O_WORKDIR
mpirun -n 12 lmp_mpi -i build_acetone.lmp
mpirun -n 12 lmp_mpi -i build_acetonitrile.lmp
mpirun -n 12 lmp_mpi -i equil.lmp
